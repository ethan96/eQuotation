                    <td class="field100 fieldTitleRight">Expired Date</td>
                    <td>
                        @Html.TextBoxFor(mdl => mdl.ExpiredDate, "{0:MM/dd/yyyy}", new { @id = "txtExpiredDate", @class = "text050", @readonly = "true" })&nbsp;
