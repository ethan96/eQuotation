                                <tr>
                                    <td style="width:100px;vertical-align:middle">Remarks: </td>
                                    <td>@Html.TextAreaFor(m => m.Remark, new { @id = "txtRemarks", @style = "height:100px" })&nbsp;</td>
                                </tr>
                                <tr>
